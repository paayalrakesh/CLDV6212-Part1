@model IEnumerable<ABC_Retailers.Models.Product>

<h1>Products</h1>

<p>
    <!--<a asp-action="Create" class="btn btn-primary">Add New Product</a>-->
    <a href="/Product/Create" class= "btn btn-primary"> Add New Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-partitionKey="@product.PartitionKey" asp-route-rowKey="@product.RowKey" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-partitionKey="@product.PartitionKey" asp-route-rowKey="@product.RowKey" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
