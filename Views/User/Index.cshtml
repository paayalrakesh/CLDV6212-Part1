@model IEnumerable<ABC_Retailers.Models.User>

<h1>Users</h1>

<p>
    <a href="/User/Create" class="btn btn-primary">Add New User</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = user.RowKey })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", new { id = user.RowKey })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
