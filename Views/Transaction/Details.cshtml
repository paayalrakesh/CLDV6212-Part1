@model ABC_Retailers.Models.Transaction

@{
    ViewData["Title"] = "Details";
}

<h1>Transaction Details</h1>

<div>
    <h4>Transaction</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Transaction ID</dt>
        <dd class="col-sm-10">@Model.TransactionId</dd>
        <dt class="col-sm-2">Item Name</dt>
        <dd class="col-sm-10">@Model.ItemName</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@(Model.Quantity * Model.Price))</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.TransactionId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
