@model IEnumerable<ABC_Retailers.Models.Transaction>

<h1>Transactions</h1>

<p>
    <a href="/Transaction/Create" class="btn btn-primary">Add New Transaction</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>Transaction ID</th>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total Price</th>
            <th>Transaction Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.TransactionId</td>
                    <td>@transaction.ItemName</td>
                    <td>@transaction.Quantity</td>
                    <td>@transaction.Price</td>
                    <td>@transaction.TotalPrice</td>
                    <td>@transaction.TransactionDate</td>
                    <td>@transaction.Status</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = transaction.TransactionId })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("Delete", new { id = transaction.TransactionId })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8">No transactions available</td>
            </tr>
        }
    </tbody>
</table>
