@model ABC_Retailers.Models.Transaction

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Transaction</h1>

<h3>Are you sure you want to delete this transaction?</h3>
<div>
    <h4>@Model.ItemName</h4>
    <dl class="row">
        <dt class="col-sm-2">Transaction ID</dt>
        <dd class="col-sm-10">@Model.TransactionId</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="TransactionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
